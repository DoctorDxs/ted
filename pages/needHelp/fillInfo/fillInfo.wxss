/* pages/needHelp/fillInfo/fillInfo.wxss */

.fill-detial-information {padding:20rpx;display: flex;flex-direction: column;}
/* 填写标题  */
.info-title {color: red;font-size: 32rpx;margin: 40rpx 0 20rpx;}
.file-detail {display: flex;flex-direction: row;justify-content: space-between; border-bottom: 1px solid #e3e4e5;padding: 20rpx 0;}
.file-detail input {width: 100%;font-size: 40rpx;}
.file-detail text {font-size: 34rpx;}
.small-text {font-size: 22rpx;margin-left: 20rpx;color: #999;border-bottom: 1px solid #999;}
.file-detail-text {font-size: 26rpx;border-bottom: 1px solid #e3e4e5;padding: 20rpx 0;}
.file-detail-text textarea {max-height:200rpx;width: 100%;overflow-y: scroll;}
/* 上传图拍  */
.upload-description {font-size: 24rpx;color: #666;padding: 20rpx 0;}
.btn-upload-img {color: red;text-align: center;min-height: 120rpx;border: 2px dashed #d3d4d5;line-height: 120rpx;margin: 20rpx 0;}
.read-agree {display: flex;flex-direction: row;font-size: 22rpx;text-align: center;margin: 60rpx 0 20rpx;align-items: center;justify-content: center;color: red;}
.agree-text {color: #999;}
.btn-submit button{color: #fff;background: #fe4145;}
.btn-tel {text-align: center;color: #999;margin: 30rpx 0 20rpx}
.tel-num {color: red;}
.imgList {margin: 20rpx 0;display: flex;flex-direction: row;flex-wrap: wrap;align-items: center;}
.imgList image{height: 130rpx;width: 130rpx;margin: 0 20rpx;}
.addImg{border: 1px dashed #e3e4e5;height: 130rpx;width: 130rpx;font-size:130rpx;color: #e3e4e5;text-align: center;line-height: 120rpx; }
.imgList {position: relative;}
.icon-close {position:absolute;font-size: 36rpx;background: rgba(000,000,000,.5);color: #fff;right: 25rpx;top: 5rpx;}
.not_agree {color: #999}